<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="16sp"
    tools:context=".AppDetailActivity">

    <LinearLayout
        android:id="@+id/headLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/appIconDetailImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/appNameDetailLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="App Name: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/appNameDetailTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="App Name: " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/verDetailLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Version: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/verDetailTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Version: " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/minSdkDetailLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Min Sdk: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/minSdkDetailTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Min Sdk: " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/targetSdkDetailLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Target Sdk: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/targetSdkDetailTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Target Sdk: " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/appSizeDetailLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="App Size: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/appSizeDetailTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0KB" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Size: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dataSizeDetailTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0KB" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Batter Level: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/battery_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cpu Rate: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/max_cpu_fred"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Network Type: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/network_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Memory: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/memory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/perll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headLL"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/permissionRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Permissions: "
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/appDetailView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/perll"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/emptyDetailView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/perll"
        android:gravity="center"
        android:text="No Data"
        android:visibility="gone" />

</RelativeLayout>